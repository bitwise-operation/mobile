<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_margin="10dp">

    <TextView
        android:id="@+id/match_list_item_time"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        tools:text="1:00pm"
        android:text="1:00pm"
        android:textSize="16dp"
        android:layout_gravity="left|center"
        android:gravity="center"/>

    <!-- Player 1 (this really should be a reusable view...-->
    <!-- https://github.com/hdodenhof/CircleImageView -->
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/match_list_item_avatar1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/placeholder_avatar"
        app:border_width="2dp"
        app:border_color="#FF000000"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/match_list_item_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Bob Evans"
            android:text="Bob Evans"
            android:textSize="20dp"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/match_list_item_wins1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10-1"
            android:text="10-1"
            android:textSize="14dp"
            android:padding="5dp"/>

    </LinearLayout>



    <!-- Player 2 (this really should be a reusable view...right now copy-paste Player 1-->

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/match_list_item_avatar2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/placeholder_avatar"
        app:border_width="2dp"
        app:border_color="#FF000000"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"/>

    <LinearLayout
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/match_list_item_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Bob Evans"
            android:text="Bob Evans"
            android:textSize="20dp"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/match_list_item_wins2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10-1"
            android:text="10-1"
            android:textSize="14dp"
            android:padding="5dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/match_list_item_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        tools:text="Start Match"
        android:text="Start Match"
        android:textAllCaps="true"
        android:textSize="16dp"
        android:layout_gravity="right|center" />

</LinearLayout>